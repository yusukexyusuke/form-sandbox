<div class="container">
  <div class="row">
    <div class="col">
      <h2>ユーザー作成</h2>


      <%= form_for @user do |f| %>
        <div class="form-group">
          <label for="name">名前</label>
          <input type="text" id="title" name="user[name]">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" id="email" name="user[email]">
        </div>

        <%= f.submit '登録' %>
      <% end %>


    </div>
  </div>
</div>

<style>
  label {
    display: block;
      font-weight: bold;
        }
      </style>
